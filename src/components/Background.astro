---
type Props = {
  imageUrl: string;
};

const { imageUrl }: Props = Astro.props;
---

<div style={{ backgroundImage: `url(${imageUrl})` }} class="bg"></div>
<style>
  .bg {
    position: absolute;
    width: 100%;
    height: 700px;
    z-index: -10;
    top: 0;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }
  .bg::after {
    content: "";
    display: block;
    z-index: -9;
    width: 100%;
    height: 100%;
    background-image: linear-gradient(transparent, var(--dark));
  }
</style>
